{
    "name": "@potato-golem/ui",
    "version": "2.0.0",
    "description": "potato golem game lib UI module",
    "type": "module",

    "exports": {
        ".": "./dist/index.js",
        "./package.json": "./package.json"
    },
    "private": false,
    "publishConfig": {
        "access": "public"
    },

    "scripts": {
        "build": "rimraf dist && tsc --project tsconfig.build.json",
        "lint": "biome check . && tsc",
        "lint:fix": "biome check --write",
        "test:ci": "vitest",
        "publish-current": "npm publish --access public",
        "publish-minor": "npm version minor && npm run publish-current",
        "prepublishOnly": "npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kibertoad/potato-golem.git"
    },
    "author": "kibertoad",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/kibertoad/potato-golem/issues"
    },
    "homepage": "https://github.com/kibertoad/potato-golem#readme",
    "peerDependencies": {
        "@potato-golem/core": "*",
        "phaser": "^4.0.0-rc.4"
    },
    "dependencies": {
        "validation-utils": "^11.0.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@potato-golem/core": "*",
        "@lokalise/biome-config": "^2.0.0",
        "@lokalise/tsconfig": "^1.3.0",
        "@types/node": "^22.15.30",
        "phaser": "^4.0.0-rc.4",
        "rimraf": "^6.0.1",
        "vitest": "^3.2.2",
        "typescript": "^5.8.3"
    },
    "files": ["dist"]
}
