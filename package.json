{
  "name": "golem-forge",
  "version": "1.0.0",
  "description": "Workspace for building games",
  "workspaces": [
    "games/*",
    "libs/*",
    "template"
  ],
  "scripts": {
    "clean": "turbo run clean",
    "build": "turbo run build",
    "build:prod": "turbo run build:prod --filter=someday-among-stars",
    "test:ci": "turbo run test:ci",
    "lint": "turbo run lint --continue=always",
    "lint:fix": "turbo run lint:fix --continue=always"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@lokalise/biome-config": "^3.1.0",
    "turbo": "^2.5.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kibertoad/golem-forge.git"
  },
  "packageManager": "npm@10.9.2",
  "private": false
}
